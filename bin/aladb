#!/bin/bash
# insta485db

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    # test ! -e var/ala.sqlite3 && echo no
    if [ -e var/ala.sqlite3 ]; then
        echo "Database already exists."
    else
        echo "Database does not exist, creating database"
        set -x
        sqlite3 var/ala.sqlite3 < sql/schema.sql
        sqlite3 var/ala.sqlite3 < sql/data.sql

    fi
    ;;

  "destroy")
    echo "database destroyed"
    set -x
    rm -rf var/ala.sqlite3
    ;;

  "reset")
    echo "resetting database"
    set -x
    rm -rf var/ala.sqlite3
    sqlite3 var/ala.sqlite3 < sql/schema.sql
    sqlite3 var/ala.sqlite3 < sql/data.sql
    ;;

  "dump")
    echo "dump:"
    set -x
    sqlite3 -batch -line var/ala.sqlite3 'SELECT * FROM users'
    sqlite3 -batch -line var/ala.sqlite3 'SELECT * FROM answers'
    ;;

  *)
    usage
    exit 1
    ;;
esac
